<section class="contact  py-lg-5 py-md-4 py-md-3 py-2" id="contact">



    <section class="wthree-row py-5 w3-contact" id="contact">
        <div class="container py-md-5">
            <h4 class="w3ls-title text-center text-uppercase pb-md-5 pb-4">
                Service Request
            </h4>
            @using (Html.BeginForm("ServiceRequest", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal m-t-20", id = "ServiceRequestform", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="row contact-form ">
                    <div class="col-lg-6 wthree-form-left">
                        <!-- contact form grid -->

                        <div style="color:red"> @Html.ValidationSummary(true)</div>

                        <div class="row p-b-30">
                            <div class="col-12">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                    </div>
                                    @Html.TextBoxFor(m => m.FirsName, new { @class = "form-control form-control-lg", @placeholder = "First Name", @required = "" })
                                    @Html.ValidationMessageFor(m => m.FirsName)
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                    </div>
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-lg", @placeholder = "Last Name", @required = "" })
                                    @Html.ValidationMessageFor(m => m.LastName)
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                    </div>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @placeholder = "Email", @required = "" })
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                    </div>
                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control form-control-lg", @placeholder = "Phone Number", @required = "" })
                                    @Html.ValidationMessageFor(m => m.PhoneNumber)
                                </div>
                                @*<div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                        </div>
                                        @Html.TextBoxFor(m => m.DateOfRequest, new { @class = "form-control form-control-lg", @placeholder = "Date Of Request", @required = "" })
                                        @Html.ValidationMessageFor(m => m.DateOfRequest)
                                    </div>*@
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                    </div>
                                    @Html.TextBoxFor(m => m.ProductTybe, new { @class = "form-control form-control-lg", @placeholder = "Product Type", @required = "", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(m => m.ProductTybe)
                                </div>

                            </div>
                        </div>



                        <!--  //contact form grid ends here -->
                    </div>
                    <!-- contact details -->
                    <!-- contact map grid -->
                    <div class="col-lg-6   wthree-form-right">

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            @Html.TextBoxFor(m => m.Brand, new { @class = "form-control form-control-lg", @placeholder = "Brand", @required = "" })
                            @Html.ValidationMessageFor(m => m.Brand)
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control form-control-lg", @placeholder = "Address", @required = "" })
                            @Html.ValidationMessageFor(m => m.Address)
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            @Html.TextBoxFor(m => m.Pincode, new { @class = "form-control form-control-lg", @placeholder = "Pincode", @required = "" })
                            @Html.ValidationMessageFor(m => m.Pincode)
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            @Html.TextBoxFor(m => m.Complaint, new { @class = "form-control form-control-lg", @placeholder = "Complaint", @required = "" })
                            @Html.ValidationMessageFor(m => m.Complaint)
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-success text-white" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            @Html.TextAreaFor(m => m.Comment, new { @class = "form-control form-control-lg", @placeholder = "Comment", @required = "" })
                            @Html.ValidationMessageFor(m => m.Comment)
                        </div>
                        <!--//contact map grid ends here-->
                    </div>
                    <!-- //contact details container -->

                </div>
                <div class="row border-top border-secondary">
                    <div class="col-12">
                        <div class="form-group">
                            <div class="p-t-20">


                                <input type="submit" value="Submit" class="btn btn-info btn-block" style="width: 20%;" />
                                <div style="padding-top:10px">
                                    <div class="alert alert-success" role="alert" style="display:@ViewBag.Visibility">
                                        <strong>@ViewBag.Message</strong>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</section>
